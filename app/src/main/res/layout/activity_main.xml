<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTurn"
        android:layout_width="187dp"
        android:layout_height="74dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#B521A2"
        android:text="Turn off fligth mode"
        app:icon="@drawable/baseline_airplanemode_inactive_24"
        app:layout_constraintEnd_toStartOf="@+id/btnUpdating"
        app:layout_constraintHorizontal_bias="0.716"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="187dp"
        android:layout_height="74dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#8E8E8E"
        android:text="Picture save to gallery"
        android:textColor="#EA0000"
        app:layout_constraintEnd_toEndOf="@+id/btnTurn"
        app:layout_constraintStart_toStartOf="@+id/btnTurn"
        app:layout_constraintTop_toBottomOf="@+id/btnTurn" />

    <Button
        android:id="@+id/btnUpdating"
        android:layout_width="187dp"
        android:layout_height="74dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#FF0303"
        android:text="Updating profile"
        app:icon="@drawable/baseline_sync_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUnlock"
        android:layout_width="187dp"
        android:layout_height="74dp"
        android:backgroundTint="#232323"
        android:text="Unlocked level 5"
        app:layout_constraintEnd_toEndOf="@+id/btnUpdating"
        app:layout_constraintStart_toStartOf="@+id/btnUpdating"
        tools:layout_editor_absoluteY="170dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="187dp"
        android:layout_height="74dp"
        android:layout_marginTop="44dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/btnGallery"
        app:layout_constraintHorizontal_bias="0.796"
        app:layout_constraintStart_toStartOf="@+id/btnGallery"
        app:layout_constraintTop_toBottomOf="@+id/btnGallery" />

    <Button
        android:id="@+id/button6"
        android:layout_width="187dp"
        android:layout_height="74dp"
        android:layout_marginEnd="28dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/btnUnlock"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnUnlock"
        tools:layout_editor_absoluteY="288dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="198dp"
        android:layout_height="215dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/android_svgrepo_com__1_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>